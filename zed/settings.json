// Zed settings
{
    // Stuff I don't want
    "disable_ai": true,
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },

    // UI
    "ui_font_family": ".ZedSans",
    "autosave": "off",
    "terminal": {
        "font_family": ".ZedMono"
    },
    "icon_theme": "Catppuccin Frappé",
    "base_keymap": "VSCode",
    "ui_font_size": 16,
    "buffer_font_size": 15,
    "theme": "Catppuccin Frappé (Blur) [Heavy]",
    "experimental.theme_overrides": {
        "editor.active_line.background": "#a5aecf36", // Add contrast for current line
    },
    "format_on_save": "off",
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": false,
        "selections_menu": false
    },
    "tabs": {
        "file_icons": true
    },
    "minimap": {
        "show": "always"
    },

    "hide_mouse": "on_typing_and_movement",
    "cursor_shape": "underline",

    // Tabs/Wrapping
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware"
    },
    "tab_size": 4,
    "hard_tabs": false,
    "wrap_guides": [120],
    "soft_wrap": "editor_width",

    // Language specific
    "languages": {
        "Markdown": {
            // "show_completions_on_input": false,
            // "show_edit_predictions": false,
            // "show_completion_documentation": false
            "format_on_save": "off",
            "completions": {
                "words": "disabled"
            }
        }
    }
}
