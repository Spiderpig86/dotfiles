// Zed settings
{
    // Stuff I don't want,
    "disable_ai": true,
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },

    // UI
    "ui_font_family": ".ZedSans",
    "autosave": "off",
    "terminal": {
        "font_family": ".ZedMono"
    },
    "icon_theme": "Catppuccin Frappé",
    "base_keymap": "VSCode",
    "ui_font_size": 16,
    "buffer_font_size": 15,
    "theme": "Catppuccin Frappé (Blur) [Heavy]",
    "experimental.theme_overrides": {
        // Catppuccin Frappé blur dark translucent overrides
        // Ref: https://www.reddit.com/r/ZedEditor/comments/1dw4430/comment/njl0phw/?utm_source=share&utm_medium=web3x&utm_name=web3xcss&utm_term=1&utm_content=share_button
        "status_bar.background": "#303446e0",
        "title_bar.background": "#303446e0",
        "elevated_surface.background": "#303446e0",
        "editor.line_number": "#b5bfe299",
        "editor.active_line_number": "#8caaee",
        "editor.active_line.background": "#51576d40",

        "border": "#73799440",

        "scrollbar.thumb.background": "#8caaee20",

        "ghost_element.hover": "#8caaee10",
        "ghost_element.active": "#8caaee15",
        "ghost_element.selected": "#8caaee20",
        "element.hover": "#8caaee10",
    },
    "format_on_save": "off",
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": false,
        "selections_menu": false
    },
    "tabs": {
        "file_icons": true
    },
    "minimap": {
        "show": "always"
    },

    "hide_mouse": "on_typing_and_movement",
    "cursor_shape": "underline",

    // Tabs/Wrapping
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware"
    },
    "tab_size": 4,
    "hard_tabs": false,
    "wrap_guides": [120],
    "soft_wrap": "editor_width",
    "remove_trailing_whitespace_on_save": true,
    "show_whitespaces": "boundary",

    // Language specific
    "languages": {
        "Markdown": {
            // "show_completions_on_input": false,
            // "show_edit_predictions": false,
            // "show_completion_documentation": false
            "format_on_save": "off",
            "completions": {
                "words": "disabled"
            }
        }
    }
}
